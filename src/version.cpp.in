#include "@PROJECT_NAME_LOWERCASE@/version.hpp"
#include <cstdio>

namespace @PROJECT_NAME_LOWERCASE@ {
    constexpr uint32_t VERSION_MAJOR = @VERSION_MAJOR@;
    constexpr uint32_t VERSION_MINOR = @VERSION_MINOR@;
    constexpr uint32_t VERSION_PATCH = @VERSION_PATCH@;
    constexpr uint32_t VERSION_TWEAK = @VERSION_TWEAK@;
    constexpr std::string_view VERSION_STRING = "@VERSION_STRING@";
    constexpr std::string_view GIT_HASH = "@GIT_HASH@";
    constexpr std::string_view NAME = "@PROJECT_NAME@";

    void print_version() {
        std::printf("%.*s: Version %.*s, commit %.*s\n",
                static_cast<int32_t>(NAME.length()), NAME.data(),
                static_cast<int32_t>(VERSION_STRING.length()), VERSION_STRING.data(),
                static_cast<int32_t>(GIT_HASH.length()), GIT_HASH.data()
                );
    }
}
